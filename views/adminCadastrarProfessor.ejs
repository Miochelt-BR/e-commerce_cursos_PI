<%- include('partes/inicioHead') %>
    <title>Painel Admin</title>
    <link rel="stylesheet" href="/css/painelAdmin.css">
    <%- include('partes/menuNavecacao') %>

        <div class="container">

            <%- include('partes/adminMenu') %>

                <div id="retangulo-admin">
                    <form action="POST" class="formulario">
                        <label for="nome">Nome: </label>
                        <input type="text" name="nome" placeholder="Digite o nome completo">
                        <br>
                        <label for="curso">Curso: </label>
                        <select name="turma">
                            <option value="A">Harmonização Facial</option>
                            <option value="B">Depilação</option>
                            <option value="C">Sombrancelha</option>
                        </select>
                        <br>
                        <label for="turma">Turma: </label>
                        <select name="turma">
                            <option value="1">Remota</option>
                            <option value="2">Flexível</option>
                            <option value="3">Presencial</option>
                        </select>
                        <br>
                        <label for="email">E-mail: </label>
                        <input type="email" name="email" placeholder="Digite o email de cadastro do usuário">
                        <br>
                        <label for="matricula">Matrícula: </label>
                        <input type="number" name="matricula" placeholder="Digite apenas números"
                            style="max-width: max-content;">
                        <br>
                        <button>Enviar</button>

                    </form>

                </div>

        </div>



        <%- include('partes/footer') %>